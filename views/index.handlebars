<div class="container" style="margin-top:100px;">
    <div class="row">
        <div class="col-md-4 ">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h3>Burgers To Devour</h3>
                </div>
                <div class="card-body">

                    {{#each burger}}
                    {{#unless devoured}}
                    <div class="toDevour" id={{id}}>
                        <i class="fas fa-hamburger"></i>
                        <p style="display: inline-block;">{{burger_name}}</p>
                        <br>
                        <button class="devour" data-id={{id}}>Devour
                            it!</button><button class="remove" data-id={{id}}>Remove Burger</button>
                    </div>

                    {{/unless}}
                    {{/each}}

                </div>
            </div>


        </div>
        <div class="col-md-4 "><img class="img-fluid" src="/assets/images/logo.jpg"></div>
        <div class="col-md-4 ">
            <div class="card shadow">
                <div class="card-header text-center">
                    <h3>Devoured Burgers</h3>
                </div>
                <div class="card-body">
                    <ul id="devourDiv">
                        {{#each burger}}
                        {{#if devoured}}
                        <li>{{burger_name}}</li>
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>

            </div>

        </div>
    </div>
    <div class="row"></div>
    <div class="row mt-5">
        <div class="col-md-4 offset-md-4 ">
            <form class="form-inline justify-content-center" id="addburger">
                <div class="form-group mr-2">
                    <input id="newburger" type="text" class="form-control" placeholder="Add Burger to Devour">
                </div>
                <button type="submit" class="btn btn-primary"><strong>Add</strong></button>
            </form>
        </div>

    </div>

</div>